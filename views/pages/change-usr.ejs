<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/global.css">
    <link rel="stylesheet" href="/styles/forms.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <title>Change username</title>
</head>

<body>
    
    <%- include('../partials/header_adm'); %>

    
    <main class="site-main">
        <form class="site-form" id="form">
            <h1>Change Username</h1>
            <label for="usr" class="form-label">New username:</label>
            <input type="text" name="usr" id="usr" class="form-input-text" required>
            <label for="pass" class="form-label">Current password:</label>
            <input type="password" name="pass" id="pass" class="form-input-text" required>
            <input type="submit" value="Submit" class="form-submit">
        </form>
        <section id="response" class="response">
            <h2>Error</h2>
            <p id="message"></p>
        </section>
    </main>


    <%- include('../partials/footer'); %>

    <script src="/scripts/change-usr.js"></script>

</body>

</html>